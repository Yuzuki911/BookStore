<script>
    function addtocart(id) {
        $.ajax({
            type: 'GET',
            url: '/Cart/AddItem',
            dataType: 'json',
            data: { id: id, Soluong: 1 },
            success: function () {
                $('#Cartaddmodal').modal('show');
            }
        });
    }
    function addtolist(id) {
        $.ajax({
            type: 'GET',
            url: '/WishList/AddItem',
            dataType: 'json',
            data: { id: id },
            success: function () {
                $('#Listaddmodal').modal('show');
            }
        });
    }
