@using BookStore.Models
@model List<POST>
<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area bg-image--5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="bradcaump-title" style="color:#333">Blogs</h2>
                    <nav class="bradcaump-content">
                        <a class="breadcrumb_item" style="color:#333" href="@Url.Action("Index","Home")">Home</a>
                        <span class="brd-separetor" style="color:#333">/</span>
                        <span class="breadcrumb_item active">Blog</span>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<!-- Start Blog Area -->
<div class="page-blog bg--white section-padding--lg blog-sidebar right-sidebar">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-12 order-2 order-lg-1 md-mt-40 sm-mt-40">
                <div class="wn__sidebar">
                    <!-- Start Single Widget -->
                    <aside class="widget search_widget">
                        <h3 class="widget-title">Search</h3>
                        <form action="#">
                            <div class="form-input">
                                <input type="text" placeholder="Search...">
                                <button><i class="fa fa-search"></i></button>
                            </div>
                        </form>
                    </aside>
                    <!-- End Single Widget -->
                    <!-- Start Single Widget -->
                    <aside class="widget recent_widget">
                        <h3 class="widget-title">Recent</h3>
                        <div class="recent-posts">
                            <ul>
                                @foreach (var item in Model)
                                {   
                                <li>
                                    <div class="post-wrapper d-flex">
                                        <div class="thumb">
                                            <a href="@Url.Action("Details","Blog",new { id = item.ID })"><img src="~/Content/images/blog/blog-3/@item.POSTURL" alt="blog images"></a>
                                        </div>
                                        <div class="content">
                                            <h4><a href="@Url.Action("Details","Blog",new { id = item.ID })" style="line-height: 20px; color: #333; font-size: 14px; font-weight: 500;">@item.TITLE</a></h4>
                                            @{var time = (item.CREATED)?.ToString("MMM dd, yyyy");}
                                            <p style="color: #333; font-size: 12px; font-weight: 300;">@time</p>
                                        </div>
                                    </div>
                                </li>
                                }
                            </ul>
                        </div>
                    </aside>
                    <!-- End Single Widget -->
                    <!-- Start Single Widget -->
                    @*<aside class="widget comment_widget">
                        <h3 class="widget-title">Comments</h3>
                        <ul>
                            <li>
                                <div class="post-wrapper">
                                    <div class="thumb">
                                        <img src="images/blog/comment/1.jpg" alt="Comment images">
                                    </div>
                                    <div class="content">
                                        <p>demo says:</p>
                                        <a href="#">Quisque semper nunc vitae...</a>
                                    </div>
                                </div>
                            </li>

                        </ul>
                    </aside>*@
                    <!-- End Single Widget -->
                </div>
            </div>
            @{ Html.RenderAction("BlogList", "Blog"); }
        </div>
    </div>
</div>
<!-- End Blog Area -->